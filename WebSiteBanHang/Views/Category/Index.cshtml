@model IEnumerable<WebSiteBanHang.Models.Category>

<h2>Categories</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Create New Category</a>
</p>

@if (Model != null && Model.Any())
{
    // Access Model properties inside this block
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Display" asp-route-id="@category.Id" class="btn btn-success">View</a> |
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found.</p>
        }